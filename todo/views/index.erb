<h3>Create a list</h3>

<ul>
  <% @lists.each do |list| %>
    <a href="/list/<%= list.id %>"><li><%= list.name %></li></a>
  <% end %>
</ul>

<form action="/new_list" method="post">
  <label for="list_name">Name your list:</label>
  <input type="text" name="list_name" required>
  <button type="submit" name="button">Create</button>
</form>

<a href="/list_delete"><button class="btn btn-danger" name="button">Delete a list</button></a>
